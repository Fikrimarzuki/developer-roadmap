<%- include("../partials/header", { title: "Users List" }) %>

<p><a href="/users/new">+ Create User</a></p>

<ul>
  <% users.forEach((u) => { %>
    <li class="row">
      <a href="/users/<%= u.id %>"><%= u.name %></a>
      (<%= u.email %>)
      - <a href="/users/<%= u.id %>/edit">edit</a>
      <form action="/users/<%= u.id %>/delete" method="post" style="display:inline;">
        <button type="submit">delete</button>
      </form>
    </li>
  <% }) %>
</ul>

<%- include("../partials/footer") %>
